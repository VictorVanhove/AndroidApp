<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hogent.dikkeploaten">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />


    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_app"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_app_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.hogent.dikkeploaten.activities.SettingsActivity"
                android:label="@string/title_activity_settings"
                android:parentActivityName="com.hogent.dikkeploaten.activities.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.hogent.dikkeploaten.activities.MainActivity"/>
        </activity>
        <activity
                android:name="com.hogent.dikkeploaten.activities.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.hogent.dikkeploaten.activities.LoginActivity"
                android:label="">
        </activity>
        <activity
                android:name="com.hogent.dikkeploaten.activities.RegistrationActivity"
                android:label="">
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>