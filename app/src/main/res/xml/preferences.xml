<androidx.preference.PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory>

        <Preference
                app:key="profile"
                app:title="Photo"
                app:summary="Change your profile picture"
        />

        <Preference
                app:key="cover"
                app:title="Cover"
                app:summary="Change your profile cover"
        />

    </PreferenceCategory>

    <PreferenceCategory
            app:title="Your personal information">

        <EditTextPreference
                app:key="username"
                app:title="Username"
                app:summary="Change your profile's username"/>

        <EditTextPreference
                app:key="password"
                app:title="Password"
                app:summary="Change your profile's password"/>

    </PreferenceCategory>

    <PreferenceCategory>

        <Preference
        app:key="about_fragment"
        app:title="About this app"
        app:fragment="com.example.dikkeploaten.Fragments.AboutFragment"
        />

        <Preference
                app:key="logout"
                app:title="Log out"
        />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
