<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="property"
                type="com.hogent.dikkeploaten.network.AlbumProperty"/>
    </data>

    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingBottom="3dp">

        <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dip">

                <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:id="@+id/image_album"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="20dip"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/imageAlbumDescription"
                        app:imageUrl="@{property.thumb}"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_block"
                        android:textColor="#000"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/image_album">

                    <TextView
                            android:id="@+id/title_album"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{property.title}"
                            android:textSize="18sp"
                            android:textStyle="bold" android:fontFamily="@font/oswald"/>

                    <TextView
                            android:id="@+id/artist_album"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{property.artist}"
                            android:textSize="14sp"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/primaryDarkColor"/>

                </LinearLayout>

                <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:id="@+id/image_status"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/imageStatusDescription"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>