<resources>

    <!-- Base application theme. -->
    <style name="Theme.DikkePloaten" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/secondaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnSurface">@color/secondaryDarkColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="colorSurface">@color/secondaryLightColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/oswald</item>
    </style>

    <style name="Theme.DikkePloaten.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.DikkePloaten.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>
